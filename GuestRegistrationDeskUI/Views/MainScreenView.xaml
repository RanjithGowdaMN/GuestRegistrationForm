<UserControl x:Class="GuestRegistrationDeskUI.Views.MainScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuestRegistrationDeskUI.Views"
             mc:Ignorable="d" Background="White" FontSize="18" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="400*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="35"/>
            <RowDefinition Height="auto" MinHeight="35"/>
            <RowDefinition Height="auto" MinHeight="35"/>
            <RowDefinition Height="auto" MinHeight="35" />
            <RowDefinition Height="auto" MinHeight="35"/>
            <RowDefinition Height="auto" MinHeight="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Center" x:Name="ScanIDCard" Padding="20 5" Width="92" Margin="22,10,19,10" >
            Scan
        </Button>

        <Button Grid.Row="2" Grid.Column="0" Padding="20 5" Width="92" Margin="56,10,52,10"
                HorizontalAlignment="Center" x:Name="RFU1" >
            Photo
        </Button>

        <Button Grid.Row="3" Grid.Column="0" Padding="20 5"
                HorizontalAlignment="Center" x:Name="RFU2" Margin="56,10,52,10" Width="92">
            Save
        </Button>

        <Button Grid.Row="4" Grid.Column="0" Padding="20 5"
                HorizontalAlignment="Center" x:Name="RFU3" Margin="56,10,52,10" Width="92">
            Print
        </Button>

        <Button Grid.Row="5" Grid.Column="0" Padding="20 5"
                HorizontalAlignment="Center" x:Name="RFU4" Margin="56,22,52,10" Width="92">
            Other
        </Button>
        <TextBox x:Name="Name"  Text="{Binding visitorName, Mode=TwoWay}" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="58,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="490"/>
        <TextBox x:Name="IDNo" Text="{Binding visitorIDNo, Mode=TwoWay}" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="58,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="DOB" Text="{Binding visitorDOB, Mode=TwoWay}" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="58,10,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="Expiry" Text="{Binding visitorIDExpiry, Mode=TwoWay}" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="58,14,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="Nationality" Text="{Binding visitorNationality, Mode=TwoWay}" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="58,16,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>

    </Grid>
</UserControl>
