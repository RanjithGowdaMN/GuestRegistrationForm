             d:DesignHeight="800" d:DesignWidth="1500"
             Height="auto" Width="auto"  >

    <Grid MinHeight="1200" Margin="0,0,10,10"  >

        <TabControl TabStripPlacement="Left" Margin="0,10,0,-10" Padding="0 0 0 0" FontSize="18" FontWeight="Bold">
